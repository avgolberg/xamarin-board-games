<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage 
    xmlns:local="clr-namespace:BGApp"
    xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            android:TabbedPage.ToolbarPlacement="Bottom"
            x:Class="BGApp.MainPage">
    <NavigationPage Title="Catalog" IconImageSource="catalog.png">
        <x:Arguments>
            <local:CatalogPage />
        </x:Arguments>
    </NavigationPage>
    <ContentPage Title="Collection"
                 IconImageSource="collection.png">
        <Label Text="Collection"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
    </ContentPage>
    <ContentPage Title="WishList"
                 IconImageSource="wishlist.png">
        <Label Text="WishList"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
    </ContentPage>
    <NavigationPage Title="Random Game"
                    IconImageSource="random.png">
        <x:Arguments>
            <local:RandomPage />
        </x:Arguments>
    </NavigationPage>
</TabbedPage>
